<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <display-name>Send</display-name>
  <enterprise-beans>
    <session>
    <ejb-name>Send</ejb-name>
    <home>com.sun.ejte.j2ee.genericra.ejb.SendHome</home>
    <remote>com.sun.ejte.j2ee.genericra.ejb.Send</remote>
    <ejb-class>com.sun.ejte.j2ee.genericra.ejb.SendBean</ejb-class>
    <session-type>Stateless</session-type>
    <transaction-type>Container</transaction-type>
    <resource-ref>
      <description>description</description>
      <res-ref-name>jms/MyQueueConnectionFactory</res-ref-name>
      <res-type>javax.jms.QueueConnectionFactory</res-type>
      <res-auth>Container</res-auth>
      <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <resource-env-ref>
      <resource-env-ref-name>jms/EJB_QUEUE</resource-env-ref-name>
      <resource-env-ref-type>javax.jms.Queue</resource-env-ref-type>
    </resource-env-ref>
    <security-identity>
      <use-caller-identity/>
    </security-identity>
    </session>
    <message-driven>
    <ejb-name>SimpleMessageMDB</ejb-name>
    <ejb-class>com.sun.ejte.j2ee.genericra.ejb.SimpleMessageBean</ejb-class>
    <messaging-type>javax.jms.MessageListener</messaging-type>
    <transaction-type>Container</transaction-type>
    <message-destination-type>javax.jms.Queue</message-destination-type>            
    <ejb-ref>
        <ejb-ref-name>ejb/Send</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.sun.ejte.j2ee.genericra.ejb.SendHome</home>
        <remote>com.sun.ejte.j2ee.genericra.ejb.Send</remote>
  </ejb-ref>
    <resource-ref>
      <description>description</description>
      <res-ref-name>jms/MyQueueConnectionFactory</res-ref-name>
      <res-type>javax.jms.QueueConnectionFactory</res-type>
      <res-auth>Container</res-auth>
      <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>   
    <resource-env-ref>
      <resource-env-ref-name>jms/MDB_REPLY_QUEUE</resource-env-ref-name>
      <resource-env-ref-type>javax.jms.Queue</resource-env-ref-type>
    </resource-env-ref>
    </message-driven>
  </enterprise-beans>
  <assembly-descriptor>
   <container-transaction>    
   <method>
    <ejb-name>Send</ejb-name>
    <method-intf>Remote</method-intf>
    <method-name>sendTextMessageToQ</method-name>
    <method-params>
    <method-param>java.lang.String</method-param>
    </method-params>
    </method>
    <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
    <container-transaction>
   <method>
    <ejb-name>SimpleMessageMDB</ejb-name>
    <method-name>onMessage</method-name>
    <method-params>
    <method-param>javax.jms.Message</method-param>
    </method-params>
    </method>
    <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
